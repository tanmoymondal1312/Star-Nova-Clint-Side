<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Top fade -->
    <item android:height="@dimen/_50sdp" android:gravity="top">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="@color/transparent"
                android:endColor="@color/layout_bg" />
        </shape>
    </item>

    <!-- Bottom fade -->
    <item android:height="@dimen/_50sdp" android:gravity="bottom">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="@color/transparent"
                android:endColor="@color/layout_bg" />
        </shape>
    </item>

</layer-list>
