<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

    <!-- Gradient Background -->
    <gradient
        android:startColor="#3E494B"
        android:endColor="#0A27CC"
        android:angle="90" />

    <!-- Rounded Corners -->
    <corners android:radius="14dp" />

    <!-- Border -->
    <stroke
        android:width="1.5dp"
        android:color="#FFFFFF" />

    <!-- Shadow for popup (requires elevation in view) -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp"/>
</shape>
