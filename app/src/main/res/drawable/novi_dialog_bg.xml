<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Top fade -->
    <item android:height="@dimen/_20sdp" android:gravity="top">
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <gradient
                android:angle="90"
                android:startColor="@color/transparent"
                android:endColor="#C7A4D3DE" />
        </shape>
    </item>

    <!-- Bottom fade -->
    <item android:height="@dimen/_30sdp" android:gravity="bottom">
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <gradient
                android:angle="270"
                android:startColor="@color/transparent"
                android:endColor="#A4D3DE" />
        </shape>
    </item>

</layer-list>
