<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="18dp"
    android:background="@color/layout_bg">

    <!-- Cute Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/what_s_your_name"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:fontFamily="@font/f2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Name Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@color/card_soft_yellow"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ§’ Your Name"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                app:boxBackgroundMode="filled"
                app:boxCornerRadiusTopStart="18dp"
                app:boxCornerRadiusTopEnd="18dp"
                app:boxCornerRadiusBottomStart="18dp"
                app:boxCornerRadiusBottomEnd="18dp"
                app:boxBackgroundColor="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Type your name ðŸ˜Š"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:padding="14dp"
                    android:inputType="textPersonName"
                    android:textColor="@color/black"
                    android:fontFamily="@font/f2"/>
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Experience Title -->
    <TextView
        android:id="@+id/tvTitleExperience"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/how_good_is_your_english"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        android:gravity="center"
        android:fontFamily="@font/f2"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/cardName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Spinner Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardExperience"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@color/card_soft_green"
        app:layout_constraintTop_toBottomOf="@id/tvTitleExperience"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="14dp">

            <com.skydoves.powerspinner.PowerSpinnerView
                android:id="@+id/spinnerExp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/spinner_popup_bg"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="15sp"
                android:fontFamily="@font/f2"
                app:spinner_arrow_gravity="end"
                app:spinner_arrow_padding="10dp"
                app:spinner_divider_show="false"
                app:spinner_item_array="@array/experience_array"
                app:spinner_item_height="48dp"
                app:spinner_popup_animation="dropdown"
                app:spinner_popup_elevation="18dp"/>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
