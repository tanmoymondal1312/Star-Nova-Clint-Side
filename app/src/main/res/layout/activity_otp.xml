<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_bg"
    android:paddingStart="@dimen/_24sdp"
    android:paddingEnd="@dimen/_24sdp"
    android:paddingTop="32dp"
    tools:context=".ui.OtpActivity">

    <!-- Back Button -->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/arrow_back"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30sdp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/arrow_left"
        android:contentDescription="@string/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Title -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="12dp"
        android:fontFamily="@font/font_child"
        android:gravity="center"
        android:text="@string/verify_otp"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/arrow_back"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Instruction Text -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/varification_instruction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="@string/we_have_sent_a_varification_code_to"
        android:textSize="16sp"
        android:textColor="@color/color_white_low"
        android:fontFamily="@font/f2"
        android:gravity="center"
        android:lineSpacingExtra="4sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <!-- Phone Number -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/demo_number"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:fontFamily="@font/font_child"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/varification_instruction" />

    <!-- OTP View -->
    <com.mukeshsolanki.OtpView
        android:id="@+id/otp_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:inputType="number"
        app:OtpItemCount="6"
        android:itemBackground="@drawable/bg_otp_item"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number" />

    <!-- Error Message (Initially Hidden) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/error_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:padding="0dp"
        android:layout_marginTop="5dp"
        android:text="@string/validation_failed_please_enter_correct_otp"
        android:textColor="@color/red"
        android:textSize="14sp"
        android:visibility="gone"
        app:backgroundTint="@android:color/transparent"
        app:icon="@drawable/icon_info"
        app:iconGravity="textStart"
        app:iconPadding="4dp"
        app:iconSize="16dp"
        app:iconTint="@color/red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otp_view" />

    <!-- Continue Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_continue"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/button_background_disabled"
        android:elevation="4dp"
        android:text="@string/cont"
        android:textAllCaps="false"
        android:textColor="@color/white_disable"
        android:textSize="18sp"
        android:fontFamily="@font/font_child"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/error_message" />



    <!-- Resend OTP -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/resend_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/resend_otp_in"
        android:textColor="@color/color_white_low"
        android:textSize="14sp"
        android:fontFamily="@font/f2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_continue" />

    <!-- Timer -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="60s"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:fontFamily="@font/f2"
        app:layout_constraintBottom_toBottomOf="@id/resend_otp"
        app:layout_constraintStart_toEndOf="@id/resend_otp"
        app:layout_constraintTop_toTopOf="@id/resend_otp" />

</androidx.constraintlayout.widget.ConstraintLayout>